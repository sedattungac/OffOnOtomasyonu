            <img src="~/182113022_SedatTUNGAÇ/img/kayit1.png" alt="Avatar" class="avatar">
        </div>

        <div class="container">
            <label><b>Ad </b></label>
            <input type="text" placeholder="Ad Giriniz" name="CariAd" required="" />

            <label><b>Soyad</b></label>
            <input type="text" placeholder="Soyad Giriniz" name="CariSoyad" required="" />

            <label><b>Mail</b></label>
            <input type="text" placeholder="Mail Giriniz" name="CariMail" required="" />

            <label><b>Adres</b></label>
            <input type="text" placeholder="Mail Giriniz" name="CariAdres" required="" />

            <label><b>Şehir</b></label>
            <input type="text" placeholder="Mail Giriniz" name="CariSehir" required="" />

            <label><b>Telefon</b></label>
