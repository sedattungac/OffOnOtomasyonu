@using OffOnOtomasyonu.Models.Siniflar
@model List<mesajlar>

@foreach (var x in Model)
{
    <div class="timeline timeline-inverse">

        <!-- timeline time label -->

        <div class="time-label">

            <span class="bg bg-gradient-pink">

                @x.Tarih.ToShortDateString()

            </span>
            <br />
        </div>

        <!-- /.timeline-label -->
        <!-- timeline item -->

        <div>

            <img style="margin-left:15px; width:35px;" src="~/Image/icon-removebg-preview.png">
            @*<i class="fas fa-envelope bg-primary" style="margin-left:25px;"></i>*@

            <div class="timeline-item">



                <h3 class="timeline-header"><a href="#">@x.Konu</a> </h3>

                <div class="timeline-body">

                    @x.icerik

                </div>


            </div>

        </div>



    </div>
}
