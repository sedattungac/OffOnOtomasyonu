@using OffOnOtomasyonu.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Listesi</h2>
<br />

<table class="table table-bordered" style="margin-top:20px">


    <tr>
        @*<th>ID</th>*@
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Departman Detaylar</th>

    </tr>

    @foreach (var k in Model)
    {



        <tr>

            @*<td>
                    @k.Departmanid
                </td>*@
            <td>
                @k.DepartmanAd
            </td>
            <td><a href="/Departman/DepartmanSil/@k.Departmanid" class="btn btn-danger">Sil</a></td>

            <td><a href="/Departman/DepartmanGetir/@k.Departmanid" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@k.Departmanid" class="btn btn-warning" style="color:white">Detaylar</a></td>
        </tr>
    }

</table>

<a href="/Departman/DepartmanEkle" class="btn btn-info">Departman Ekle</a>


