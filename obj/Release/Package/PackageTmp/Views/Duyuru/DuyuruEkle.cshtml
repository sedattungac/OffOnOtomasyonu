@model OffOnOtomasyonu.Models.Siniflar.mesajlar

@{
    ViewBag.Title = "DuyuruEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>AdminLTE 3 | Compose Message</title>

    <!-- Tell the browser to be responsive to screen width -->

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">

    <!-- Ionicons -->

    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- Theme style -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">

    <!-- summernote -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css">

    <!-- Google Font: Source Sans Pro -->

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>

<body class="hold-transition sidebar-mini">





    <!-- Content Header (Page header) -->

    <section class="content-header">

        <div class="container-fluid">

            <div class="row mb-2">

                <div>
                    <div style="text-align:left">
                        <h1>Duyuru Ekleme Sayfası </h1>

                    </div>

                    @*<div style="text-align:right; margin-left:1100px; ">
                            <p><b> Uyarı!</b> Duyuru eklemek istiyorsanız <b style="color:red;">"Kime:"</b> kısmına <b style="color:red;">"admin"</b> yazınız. </p>

                        </div>*@
                </div>



            </div>

        </div><!-- /.container-fluid -->

    </section>

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">



                <!-- /.col -->

                <div class="col-md-12">

                    <div class="card card-primary card-outline">

                        <div class="card-header">
                            <div style="text-align:left">
                                <h3 class="card-title">Duyuru Yaz</h3>
                            </div>

                            @*<div style="text-align:right">
                                    <p><b> Uyarı!</b> Duyuru eklemek istiyorsanız <b style="color:red;">"Kime:"</b> kısmına <b style="color:red;">"admin"</b> yazınız.  </p>
                                    <i>(Duyuruyu Sadece Admin Yazabilir.)</i>
                                </div>*@
                        </div>

                        <!-- /.card-header -->
                        <form class="form-group" method="post">

                            <div class="card-body">

                                <div class="form-group">

                                    <input class="form-control" value="admin" name="Alici" readonly>

                                </div>

                                <div class="form-group">

                                    <input class="form-control" name="Konu" placeholder="Konu:">

                                </div>

                                <div class="form-group">

                                    <textarea id="compose-textarea" name="icerik" class="form-control" style="height: 300px"> </textarea>

                                </div>
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>


                                <!--<div class="form-group">-->
                                @*<div class="btn btn-default btn-file">

                                        <i class="fas fa-paperclip"></i> Dosya Gönder

                                        <input type="file" name="attachment">

                                    </div>*@



                                <!--</div>-->

                            </div>
                        </form>
                        <!-- /.card-body -->

                        <div class="card-footer">

                            <div class="float-right">

                                <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslak</button>

                                @*<button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>*@

                            </div>
                            <a href="/Duyuru/Index/" class="btn btn-danger "><i class="fas fa-times"></i> Vazgeç</a>

                            @*<button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Vazgeç</button>*@

                        </div>

                        <!-- /.card-footer -->

                    </div>

                    <!-- /.card -->

                </div>

                <!-- /.col -->

            </div>

            <!-- /.row -->

        </div><!-- /.container-fluid -->

    </section>

    <!-- /.content -->
    <!-- ./wrapper -->
    <!-- jQuery -->

    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap 4 -->

    <script src="~/AdminLTE-3.0.4/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- AdminLTE App -->

    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>

    <!-- AdminLTE for demo purposes -->

    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>

    <!-- Summernote -->

    <script src="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>

    <!-- Page Script -->

    <script>
        $(function () {

            //Add text editor

            $('#compose-textarea').summernote()

        })</script>

</body>

</html>
