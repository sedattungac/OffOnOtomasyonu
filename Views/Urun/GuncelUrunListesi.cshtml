@using OffOnOtomasyonu.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Urun>
@{
    ViewBag.Title = "GuncelUrunListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<div>
    <div style="float:left">

        <h2>Güncel Ürünler</h2>

    </div>



    <div style="float:right; margin-left:100px;">

        <p>
            <a href="/Urun/UrunGeriGetir/" class="btn btn-default" align="right" style="        background-color:dimgray; margin-right: 30px; color:white;"> Silinen Ürünler</a>
            <a href="/Urun/Index/" class="btn btn-default" align="right" style="        background-color:#873962; margin-right: 30px; color:white;"> Tüm Ürünler</a>
            <a href="/Urun/UrunListesi/" class="btn btn-default" align="right" style="margin-right:30px; background-color:burlywood; color:white"> Yazdır</a>
            <a href="/Urun/YeniUrun/" class="btn btn-primary" align="right" style="margin-right:30px"> Yeni Ürün Ekle</a>
            @*@using (Html.BeginForm("GuncelUrunListesi", "Urun", FormMethod.Get))
                {
                    <a align="right" style="margin-left:350px;">
                        <b>
                            Ürün Adı: @Html.TextBox("p")
                            <input style="background-color:darkblue; color:white;" type="submit" value="Ara" />
                        </b>
                    </a>
                }*@
        </p>

    </div>
</div>


<br />
<br />


<br />
<table class="table table-bordered">
    <tr>
        @*<th>ID</th>*@
        <th>Ürün Adı</th>
        <th>Ürün Görsel</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Kategori</th>



        <th>Kaldır</th>
        <th>Güncelle</th>
        @*<th>Satış Yap</th>*@

    </tr>

    @foreach (var u in Model)
    {
        <tr>

            @*<td>@u.Urunid</td>*@
            <td>@u.UrunAd</td>
            <td>
                <a href="@u.UrunGorsel"> <img src="@u.UrunGorsel" style="width:100px; height:100px;" /></a>
            </td>
            <td>@u.Marka</td>
            <td>@u.Stok Adet</td>
            <td>@u.AlisFiyat ₺</td>
            <td>@u.SatisFiyat ₺</td>
            <td>@u.Kategori.KategoriAd</td>


            <td> <a href="/Urun/UrunKaldir/@u.Urunid" class="btn btn-danger" style="color:white;"> Kaldır</a></td>
            <td> <a href="/Urun/UrunGetir/@u.Urunid" class="btn btn-success">  Güncelle</a></td>
            @*<td> <a href="/Urun/SatisYap/@u.Urunid" class="btn btn-default" style="background-color:#ff6a00; color:white;"><img src="~/Image/sepeteekle.png" style="width:20px;" /> Satış Yap</a></td>*@


        </tr>


    }

</table>
<div style="margin-left:750px;">
    <b>
        @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("GuncelUrunListesi", new { sayfa }), new PagedListRenderOptions
        {
            LiElementClasses = new List<string>
            {"page-link"}
        }
        )
    </b>
</div>

