@model IEnumerable<OffOnOtomasyonu.Models.Siniflar.SinifGrup5>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategori Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">ID</th>
                    <th>Kategori Adı</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Oran</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}

                @foreach (var x in Model)
                {

                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@x.kategori</td>
                        <td>
                            @if (x.sayi >= 1 && x.sayi <= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress bg-primary" style="width: 20%"></div>
                                </div>
                            }

                            @if (x.sayi <= 6 && x.sayi > 3)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 40%"></div>
                                </div>
                            }
                            @if (x.sayi <= 10 && x.sayi > 6)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-warning" style="width: 65%"></div>
                                </div>
                            }
                            @if (x.sayi > 10)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-danger" style="width: 90%"></div>
                                </div>
                            }
                        </td>


                        <td>
                            @if (x.sayi >= 1 && x.sayi <= 25)
                            {
                                <span class="badge bg-primary" style="width:30px; height:20px;">@x.sayi</span>
                            }
                            @if (x.sayi <= 50 && x.sayi > 25)
                            {
                                <span class="badge bg-success" style="width:30px; height:20px;">@x.sayi</span>
                            }
                            @if (x.sayi <= 75 && x.sayi > 50)
                            {
                                <span class="badge bg-warning" style="width:30px; height:20px;">@x.sayi</span>
                            }
                            @if (x.sayi > 75)
                            {
                                <span class="badge bg-danger" style="width:30px; height:20px;">@x.sayi</span>
                            }





                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->

</div>

