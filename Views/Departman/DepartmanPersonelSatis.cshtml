@using OffOnOtomasyonu.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Personel Satış</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> Personel Adı:@ViewBag.dpers </li>
</ol>
<table class="table table-condensed">

    <tr>

        <th>Satış ID</th>
        <th>Ürün</th>
        @*<th>Cari ID</th>*@
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>


    </tr>

    @foreach (var x in Model)
    {

        <tr>
            <td>@x.Satisid</td>
            <td>@x.Urun.UrunAd</td>
            @*<td>   @x.Cariler.Cariid </td>*@
            <td> @x.Cariler.CariAd @x.Cariler.CariSoyad (@x.Cariler.CariSehir)</td>
            <td>@x.Fiyat ₺</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar ₺</td>
            <td> @(((DateTime)x.Tarih).ToString("dd MMMMMMM yyyy"))</td>
            <td><a href="#" class="btn btn-default" style="background-color:darkslateblue; color:white">Yazdır</a></td>


        </tr>
    }
</table>

